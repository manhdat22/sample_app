<% provide :title, t(".page_title") %>
<h1><%= t(".page_title") %></h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user %>
      <%= link_to user.name, user%>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to t(".delete"), user, method: :delete, data: {confirm: "Are you sure ?"} %>
      <% end %>
    </li>
  <% end %>
  <%= paginate @users, theme: "twitter-bootstrap-3"%>
</ul>
